		<Button x:Name="buttonRT" Content="3" HorizontalAlignment="Left" Margin="78,10,0,0" VerticalAlignment="Top" Width="24" Height="24"/>
		<Button x:Name="buttonLM" Content="4" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="24" Height="24"/>
		<Button x:Name="buttonMM" Content="O" HorizontalAlignment="Left" Margin="44,44,0,0" VerticalAlignment="Top" Width="24" Height="24"/>
		<Button x:Name="buttonRM" Content="6" HorizontalAlignment="Left" Margin="78,44,0,0" VerticalAlignment="Top" Width="24" Height="24"/>
		<Button x:Name="buttonLB" Content="7" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="24" Height="24"/>
		<Button x:Name="buttonMB" Content="8" HorizontalAlignment="Left" Margin="44,78,0,0" VerticalAlignment="Top" Width="24" Height="24"/>
		<Button x:Name="buttonRB" Content="9" HorizontalAlignment="Left" Margin="78,78,0,0" VerticalAlignment="Top" Width="24" Height="24"/>

	</Grid>
</Window>
